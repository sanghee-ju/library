// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//모델 - Prisma가 우리가 작성한 모델을 기반으로, DB 수정해줌.
// USER
model USER{
  ID String @id
  PW String
  FAM_ID String
  PHONE String
  NAME String
  AGE Int
}

model FAMILY{
  ID String @id
  ADDRESS String
}

//BOOK
model BOOKS{
  ISBN String @id // @id :기본키 설정하기
  TITLE String
  AUTHOR String?
  PUBLISHER String? //'?' - null을 허용함을 표시
  QUANTITY Int
  IMG_URL String
}

model BOOK_STATUS{
  ISBN String @id
  STATUS_LEVEL Int
  LOST Boolean
  DAMAGED Boolean
}

model CHECKOUT_STATUS{
  CHECK_NUMBER String @id
  CHECK_USER String
  CHECK_BOOK String
  CHECK_DATE DateTime @default(now())
}

model RESERVE_LIST{
  RSV_NUM String @id
  RSV_BOOK String
  RSV_USER String
  RSV_DATE DateTime @default(now())
}